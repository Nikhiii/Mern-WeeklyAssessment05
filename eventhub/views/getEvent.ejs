<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Details</title> <!-- Change the title to "Event Details" -->
    <link rel="stylesheet" href="getEvent.css"> <!-- Change the stylesheet filename to "getEvent.css" -->
</head>
<body>
    <h1>Event Details</h1>
    <table>
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Event Location</th>
            <th>Event Description</th>
            <th>Event Organizer</th>
            <th>Ticket Price</th>
            <th>Action</th>
        </tr>
        <!-- Loop through event data -->
        <% appevents.forEach(function(event) { %>
            <tr>
                <td><%= event.eventName %></td>
                <td><%= event.eventDate %></td>
                <td><%= event.eventLocation %></td>
                <td><%= event.eventDescription %></td>
                <td><%= event.eventOrganizer %></td>
                <td><%= event.eventTicketPrice %></td>
                <td>
                    <button onclick="updateEvent('<%= event.id %>')">Update</button>
                    <button onclick="deleteEvent('<%= event.id %>')">Delete</button>
                </td>
            </tr>
        <% }); %>
    </table>
    <script>
        function updateEvent(eventId) {
            // Redirect to the updateEvent.ejs view with the event ID as a query parameter
            window.location.href = `/updateEvent?eventId=${eventId}`;
        }

        function deleteEvent(eventId) {
            // Display a confirmation dialog
            if (confirm("Are you sure you want to delete this event?")) {
                // If the user confirms, redirect to the deleteEvent.ejs view with the event ID as a query parameter
                window.location.href = `/deleteEvent?eventId=${eventId}`;
            }
        }
    </script>
</body>
</html>
